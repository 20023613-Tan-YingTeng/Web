@*CONTACT US*@
<div id="ContactUs" class="container pt-5 pb-5">
    <div class="test"></div>
    <h1 class=" pt-5 pb-4">Contact Us</h1>
    <div class="row">
        <div class="col d-flex flex-column">
            <img src="~/images/logo.png" style="width:200px" class="pb-4" />
            <div class="row pb-3">
                <span class="ContactUs-info mb-3 col-9">You can leave a message using the contact form beside or email to <b>20023613@myrp.edu.sg</b>.</span>
            </div>
            <div>
                <i class="fa fa-instagram pr-3"></i>
                <i class="fa fa-linkedin pr-3"></i>
                <i class="fa fa-github"></i>
            </div>
        </div>
        <div class="col-6 d-flex flex-column">
            <form asp-controller="Home" asp-action="SendEmail" method="post">
                <input type="text" name="Name" class="form-control mb-3" placeholder="Name" />
                <input type="text" name="Email" class="form-control mb-3" placeholder="Email" />
                <textarea name="Description" class="form-control mb-3" rows="7" placeholder="Description..."></textarea>
                @*ADD BUTTON*@
                <div class="row d-flex justify-content-end">
                    <input type="submit" value="Submit"
                           class="btn btn-sm btn-primary col-lg-2 col-3 mr-3" />
                </div>

                @if (TempData["Message"] != null)
                {
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-6">
                            <div class="alert alert-@TempData["MsgType"]">
                                <text>@TempData["Message"]</text>
                            </div>
                        </div>
                    </div>
                }
            </form>
        </div>
    </div>
</div>